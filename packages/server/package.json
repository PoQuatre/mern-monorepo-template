{
  "name": "server",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsc-watch --noClear --onSuccess \"yarn dev:exec\"",
    "dev:exec": "tsc-alias -f && node ./dist/index.js",
    "build": "tsc && tsc-alias -f",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "clean": "rimraf ./dist",
    "lint": "eslint -c ../../.eslintrc.cli.json \"src/**/*.ts\"",
    "lint:fix": "eslint -c ../../.eslintrc.cli.json \"src/**/*.ts\" --fix",
    "format": "prettier -cu \"src/**/*\"",
    "format:fix": "prettier -wu \"src/**/*\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "resolve-package-path": "^4.0.3",
    "vite": "^2.9.8",
    "vite-plugin-ssr": "^0.3.64"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.31",
    "eslint": "^8.15.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "tsc-alias": "^1.6.7",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.4"
  }
}
